<ivysettings>

  <!-- ====================================================================== -->

  <settings defaultResolver="default" />
  
  <!-- ====================================================================== -->

  <resolvers>
    <url name="shared" m2compatible="true">
      <ivy      pattern="http://releng.sanmateo.greenplum.com/ivy/modules/[organisation]/[module]/ivy-[revision].xml" />
      <artifact pattern="http://releng.sanmateo.greenplum.com/ivy/modules/[organisation]/[module]/[type]s/[module]-[revision].[ext]" />
    </url>
    <filesystem name="local">
      <ivy      pattern="/opt/ivy/modules/[organisation]/[module]/ivy-[revision].xml" />
      <artifact pattern="/opt/ivy/modules/[organisation]/[module]/[type]s/[module]-[revision].[ext]" />
    </filesystem>
  </resolvers>

  <include url="${ivy.default.settings.dir}/ivysettings-public.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-main-chain.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-default-chain.xml"/>

  <!-- ====================================================================== -->

  <triggers>
    <ant-call target="download-untar-trigger"
              prefix="dep"
              event="post-download-artifact"
              filter="type=targz AND status=successful"/>
  </triggers>

  <!-- ====================================================================== -->

</ivysettings>
